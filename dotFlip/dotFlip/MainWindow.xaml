<Window x:Class="dotFlip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotFlip"
        mc:Ignorable="d"
        Title=".flip Demo"
        Width="719"
        Height="600">
    <StackPanel x:Name="mainPanel"
                Orientation="Horizontal">
        <StackPanel x:Name="controlPanel" 
                    Width="150" 
                    Background="WhiteSmoke">
            <!--<RadioButton Content="Option 1" GroupName="Options1" 
             IsChecked="{Binding Path=CurrentOption, Mode=TwoWay, 
                                 Converter={StaticResource enumConverter},
                                 ConverterParameter=Option1}"  />-->
            <RadioButton GroupName="Tools" x:Name="RadioPencil" Content="Pencil"/>
            <RadioButton GroupName="Tools" x:Name="RadioPen" Content="Pen"/>
            <RadioButton GroupName="Tools" x:Name="RadioMarker" Content="Marker"/>
            <RadioButton GroupName="Tools" x:Name="RadioCrayon" Content="Crayon"/>
            <RadioButton GroupName="Tools" x:Name="Eraser" Content="Eraser"/>
            <Label x:Name="ColorLabel" Content="Color:"/>
            <TextBox x:Name="ColorSelector" Height="23" TextWrapping="Wrap" Text="Color"/>
            <Label x:Name="CanvasColorLabel" Content="Canvas Color:"/>
            <TextBox x:Name="CanvasColorSelector" Height="23" TextWrapping="Wrap" Text="#123123"/>
            <StackPanel x:Name="ThicknessPanel" 
                    Width="150" 
                    Background="WhiteSmoke">
                <Label x:Name="ThicknessLabel" Content="Thickness"/>
                <Slider x:Name="ThicknessSlider" Minimum="3" Maximum="10"/>
            </StackPanel>

            <!--Label tool-->
            <!--Radio Buttons-->
            <!--Label tool color-->
            <!--Textbox-->
            <!--Label tool thickness-->
            <!--Slider-->
            <!--Label canvas color-->
            <!--Textbox-->
        </StackPanel>
        <InkCanvas x:Name="stickyNote"
                   Width="560"
                   Background="LightYellow"
                   >
        </InkCanvas>

    </StackPanel>
</Window>
