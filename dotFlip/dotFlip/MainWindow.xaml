<Window x:Class="dotFlip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotFlip"
        mc:Ignorable="d"
        Title=".flip Demo" Height="350" Width="525">
    <StackPanel x:Name="MainPanel"
                Orientation="Horizontal">
        <StackPanel x:Name="ControlPanel" Width="170" Background="Bisque"></StackPanel>
        <InkCanvas Width="350"></InkCanvas>
    </StackPanel>
</Window>
