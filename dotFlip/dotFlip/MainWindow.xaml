<Window x:Class="dotFlip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:dotFlip"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title=".Flip" 
        Width="1200"
        Height="800">
    <Window.Resources>
        <system:Double x:Key="FlipbookWidth">600</system:Double>
        <Style x:Key="DarkGradientStyle" TargetType="DockPanel">
            <Setter Property="Background">
                <Setter.Value>
                    <RadialGradientBrush>
                        <RadialGradientBrush.GradientStops>
                            <GradientStop Offset="0.33" Color="#494949"/>
                            <GradientStop Offset="1.0" Color="#1a1a1a"/>
                        </RadialGradientBrush.GradientStops>
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Save"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Sticky Note Background">
                    <xctk:ColorPicker Grid.Row="0" Name="StickyNote_ClrPicker" SelectedColorChanged="StickyNoteClrPcker_Background_SelectedColorChanged" Margin="0,0,-50,0" HorizontalAlignment="Right" Width="161" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="View"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <Slider></Slider>
            </StatusBarItem>
            <Button Style="{StaticResource PrevButton}"  Content="Previous page"/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="txtPageNum" Text="1"/>
                    <Label Content="of x"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem>
                <!--<Button Style="{StaticResource NextButton}" Content="Next Page" Click="Button_Click"/>-->
                <Button Style="{StaticResource NextButton}" Content="Next Page"/>
            </StatusBarItem>
            <StatusBarItem>
                <Button Style="{StaticResource UndoButton}">Undo</Button>
            </StatusBarItem>
            <StatusBarItem>
                <Button Style="{StaticResource RedoButton}">Redo</Button>
            </StatusBarItem>
            <StatusBarItem>
                <Button Style="{StaticResource CopyButton}">Copy Prev Page</Button>
            </StatusBarItem>
            <StatusBarItem>
                <Button Style="{StaticResource GhostButton}">Ghost Strokes</Button>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="1" Background="Blue" Content="toolbox here" Height="359" VerticalAlignment="Top"/>

                <Label x:Name="Tool_Color_Label" Content="Tool Color:" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Height="26" Width="161"/>
                <xctk:ColorPicker Grid.Row="0" Name="Tool_ClrPicker" SelectedColorChanged="ToolClrPcker_Background_SelectedColorChanged" Margin="0,41,10,295" HorizontalAlignment="Right" Width="161" />
                <UniformGrid x:Name="ColorHistory" Columns="8" Margin="127,70,10,269">
                    <Button x:Name="ColorButton1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click" Background="Black" BorderBrush="#FF5F400B" Foreground="Black" BorderThickness="0">
                        <Button.Content>
                            <Rectangle Width="14" Height="14" Margin="-2">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click" BorderBrush="#FF5F400B">
                        <Button.Content>
                            <Rectangle Width="14" Height="14" Margin="-2">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click" BorderBrush="#FF5F400B">
                        <Button.Content>
                            <Rectangle Width="14" Height="14" Margin="-2">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="10" Height="10">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="10" Height="10">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton6" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="10" Height="10">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton7" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click" BorderThickness="0">
                        <Button.Content>
                            <Rectangle Width="10" Height="10">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton8" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="10" Height="10">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                </UniformGrid>
                <Label Grid.Row="1" Content="toolbox here"/>
            </Grid>
            <StackPanel Grid.Column="1" 
                        Background="#EEE" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Grid x:Name="flipbookHolder"
                      Width="{StaticResource FlipbookWidth}"
                      Height="{StaticResource FlipbookWidth}">
                    <Border BorderBrush="Black"
                            Margin="-1"
                            BorderThickness="10">
                        <Border.Effect>
                            <DropShadowEffect Color="Black"/>
                        </Border.Effect>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
