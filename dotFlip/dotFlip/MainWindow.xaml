<Window x:Class="dotFlip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotFlip"
        mc:Ignorable="d"
        Title=".Flip" 
        Width="1200"
        Height="800">
    <Window.Resources>
        
        
        
        
        
        
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Save"/>
            </MenuItem>
            <MenuItem Header="Edit"/>
            <MenuItem Header="View"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <Slider></Slider>
            </StatusBarItem>
            <Button Style="{StaticResource PrevButton}"  Content="Previous page"/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="txtPageNum" Text="1"/>
                    <Label Content="of x"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem>
                <Button Style="{StaticResource NextButton}" Content="Next Page" Click="Button_Click"/>
            </StatusBarItem>
            <StatusBarItem>
                <Button Style="{StaticResource UndoButton}">Undo</Button>
            </StatusBarItem>
            <StatusBarItem>
                <Button Style="{StaticResource RedoButton}">Redo</Button>
            </StatusBarItem>
            <StatusBarItem>
                <Button Style="{StaticResource CopyButton}">Copy Prev Page</Button>
            </StatusBarItem>
            <StatusBarItem>
                <Button Style="{StaticResource GhostButton}">Ghost Strokes</Button>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Background="Red" Content="current tool / color here"/>
                <Label Grid.Row="1" Background="Blue" Content="toolbox here" Height="359" VerticalAlignment="Top"/>
            </Grid>
            <Label Grid.Column="1" Background="Green" Content="sticky note here"/>
        </Grid>
    </DockPanel>
</Window>
