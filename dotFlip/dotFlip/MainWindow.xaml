<Window x:Class="dotFlip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:dotFlip"
        mc:Ignorable="d"
        Title=".Flip" 
        Width="1200"
        Height="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Save"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Sticky Note Background">
                    <xctk:ColorPicker Grid.Row="0" Name="StickyNote_ClrPicker" SelectedColorChanged="StickyNoteClrPcker_Background_SelectedColorChanged" Margin="0,41,10,299" HorizontalAlignment="Right" Width="161" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="View"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <Button Content="Previous page"/>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <xctk:ColorPicker Grid.Row="0" Name="Tool_ClrPicker" SelectedColorChanged="ToolClrPcker_Background_SelectedColorChanged" Margin="0,41,10,299" HorizontalAlignment="Right" Width="161" />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.ColumnSpan="5" Source="Image/pouchback.png" Margin="0,-110,0.4,-64" RenderTransformOrigin="0.463,0.509"/>
                    <Button x:Name="Pencil" Grid.Column="1" Click="Pencil_Click" Margin="6,46,53.2,29" Grid.ColumnSpan="2">
                        <Button.Template>
                            <ControlTemplate>
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                                    <Image Source="Image/pencil.png"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="Pen" Grid.Column="1" Margin="54,53,6.2,33" Grid.ColumnSpan="2">
                        <Button.Template>
                            <ControlTemplate>
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                                    <Image Source="Image/pen.png"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="Highlighter" Grid.Column="2" Margin="53.4,53,58.4,40" Grid.ColumnSpan="3">
                        <Button.Template>
                            <ControlTemplate>
                                <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                                    <Image Source="Image/high.png"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Image Grid.ColumnSpan="5" Source="Image/pouch.png" Margin="-14,-40,-25.6,-155" RenderTransformOrigin="0.463,0.509"/>
                </Grid>
                <Label x:Name="Tool_Color_Label" Content="Tool Color:" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Height="26" Width="161"/>
                <UniformGrid x:Name="ColorHistory" Columns="8" Margin="127,70,10,269">
                    <Button x:Name="ColorButton1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="14" Height="14">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="14" Height="14">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="14" Height="14">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="14" Height="14">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="14" Height="14">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton6" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="14" Height="14">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton7" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="14" Height="14">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                    <Button x:Name="ColorButton8" HorizontalAlignment="Left" VerticalAlignment="Top" Width="15" Height="15" Click="ColorButton_Click">
                        <Button.Content>
                            <Rectangle Width="14" Height="14">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="White"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Button.Content>
                    </Button>
                </UniformGrid>
                
            </Grid>
            <Label Grid.Column="1" Background="Green" Content="sticky note here"/>
            <Label x:Name="StickyNoteColorTester" Content="StickyNote" Grid.Column="1" HorizontalAlignment="Left" Margin="150,122,0,0" VerticalAlignment="Top"/>
            <Label x:Name="ToolColorTester" Content="Tool" Grid.Column="1" HorizontalAlignment="Left" Margin="192,99,0,0" VerticalAlignment="Top"/>
        </Grid>
    </DockPanel>
</Window>
