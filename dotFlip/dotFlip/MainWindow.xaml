<Window x:Class="dotFlip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotFlip"
        mc:Ignorable="d"
        Title=".flip Demo"
        Width="719"
        Height="600">
    <Window.Resources>
        <local:SliderConverter x:Key="brushConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"
                              MinWidth="200"
                              MaxWidth="400"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="controlPanel" 
                    Grid.Column="0"
                    Background="WhiteSmoke">
            <!--<RadioButton Content="Option 1" GroupName="Options1" 
             IsChecked="{Binding Path=CurrentOption, Mode=TwoWay, 
                                 Converter={StaticResource enumConverter},
                                 ConverterParameter=Option1}"  />-->
            <RadioButton GroupName="Tools" x:Name="RadioPencil" Content="Pencil"/>
            <RadioButton GroupName="Tools" x:Name="RadioPen" Content="Pen"/>
            <RadioButton GroupName="Tools" x:Name="RadioMarker" Content="Marker"/>
            <RadioButton GroupName="Tools" x:Name="RadioCrayon" Content="Crayon"/>
            <RadioButton GroupName="Tools" x:Name="Eraser" Content="Eraser"/>
            <StackPanel x:Name="ThicknessPanel" 
                    Width="150" 
                    Background="WhiteSmoke">
                <Label x:Name="ThicknessLabel" Content="Thickness"/>
                <Slider x:Name="ThicknessSlider" Minimum="3" Maximum="10"/>
            </StackPanel>
            <Label x:Name="ColorLabel" Content="Color:"/>
            <TextBox x:Name="ColorSelector" Height="23" TextWrapping="Wrap" Text="Color"/>
            <Label x:Name="CanvasColorLabel" Content="Canvas Color:"/>
            <TextBox x:Name="CanvasColorSelector" Height="23" TextWrapping="Wrap">
                <TextBox.Text>
                    <MultiBinding Converter="{StaticResource brushConverter}">
                        <Binding Path="Value" ElementName="RedSlider" />
                        <Binding Path="Value" ElementName="GreenSlider" />
                        <Binding Path="Value" ElementName="BlueSlider" />
                    </MultiBinding>
                </TextBox.Text>
            </TextBox>

            <UniformGrid Columns="3"
                         Rows="2">
                <Label x:Name="RedLabel" Content="Red"/>
                <Label x:Name="GreenLabel" Content="Green"/>
                <Label x:Name="BlueLabel" Content="Blue"/>
                <Slider x:Name="RedSlider" Minimum="1" Maximum="255"/>
                <Slider x:Name="GreenSlider" Minimum="1" Maximum="255"/>
                <Slider x:Name="BlueSlider" Minimum="1" Maximum="255"/>
            </UniformGrid>

            <!--Label tool-->
            <!--Radio Buttons-->
            <!--Label tool color-->
            <!--Textbox-->
            <!--Label tool thickness-->
            <!--Slider-->
            <!--Label canvas color-->
            <!--Textbox-->
        </StackPanel>
        <local:StickyNoteCanvas
                   Grid.Column="1"
                   Height="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}}"
                   Background="{Binding ElementName=CanvasColorSelector, Path=Text}"/>
    </Grid>
</Window>
