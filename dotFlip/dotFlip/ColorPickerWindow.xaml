<Window x:Class="dotFlip.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:dotFlip"
        xmlns:controls="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        mc:Ignorable="d"
        Title="Color Selection" Height="290" Width="250" WindowStyle="ToolWindow" Loaded="Window_Loaded" ResizeMode="NoResize" Background="White" Closing="ColorPickerWindow_OnClosing">
    <Window.Resources>
    </Window.Resources>
    <StackPanel>
        <xctk:ColorCanvas x:Name="colorPicker" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top" UsingAlphaChannel="False" SelectedColor="White"/>
        <Button x:Name="colorPickedButton" Content="Done" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75" Click="colorPickedButton_Click"/>

    </StackPanel>
</Window>
